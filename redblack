#include<iostream>
#include<string.h>
#include "graphics.h"

#include <math.h>
#include <stdlib.h> 
#include <ctype.h>
using namespace std;

struct Node {
    int data;
    Node* padre;
    Node* izquierda;
    Node* derecha;
    int color;
};

typedef Node* NodePtr;

class ArbolRedBlack {
private:
    NodePtr root;
    NodePtr TNULL;

    void inicializarNodoNULL(NodePtr node, NodePtr padre) {
        node->data = 0;
        node->padre = padre;
        node->izquierda = nullptr;
        node->derecha = nullptr;
        node->color = 0;
    }

    void preOrderHelper(NodePtr node) {
        if (node != TNULL) {
            cout << node->data << " ";
            preOrderHelper(node->izquierda);
            preOrderHelper(node->derecha);
        }
    }

    void inOrderHelper(NodePtr node) {
        if (node != TNULL) {
            inOrderHelper(node->izquierda);
            cout << node->data << " ";
            inOrderHelper(node->derecha);
        }
    }

    void postOrderHelper(NodePtr node) {
        if (node != TNULL) {
            postOrderHelper(node->izquierda);
            postOrderHelper(node->derecha);
            cout << node->data << " ";
        }
    }

    NodePtr ayudanteBuscadorArbol(NodePtr node, int key) {
        if (node == TNULL || key == node->data) {
            return node;
        }

        if (key < node->data) {
            return ayudanteBuscadorArbol(node->izquierda, key);
        }
        return ayudanteBuscadorArbol(node->derecha, key);
    }

    // For balancing the tree after deletion
    void borrarFix(NodePtr x) {
        NodePtr s;
        while (x != root && x->color == 0) {
            if (x == x->padre->izquierda) {
                s = x->padre->derecha;
                if (s->color == 1) {
                    s->color = 0;
                    x->padre->color = 1;
                    izquierdaRotacion(x->padre);
                    s = x->padre->derecha;
                }

                if (s->izquierda->color == 0 && s->derecha->color == 0) {
                    s->color = 1;
                    x = x->padre;
                }
                else {
                    if (s->derecha->color == 0) {
                        s->izquierda->color = 0;
                        s->color = 1;
                        derechaRotacion(s);
                        s = x->padre->derecha;
                    }

                    s->color = x->padre->color;
                    x->padre->color = 0;
                    s->derecha->color = 0;
                    izquierdaRotacion(x->padre);
                    x = root;
                }
            }
            else {
                s = x->padre->izquierda;
                if (s->color == 1) {
                    s->color = 0;
                    x->padre->color = 1;
                    derechaRotacion(x->padre);
                    s = x->padre->izquierda;
                }

                if (s->derecha->color == 0 && s->izquierda->color == 0) {
                    s->color = 1;
                    x = x->padre;
                }
                else {
                    if (s->izquierda->color == 0) {
                        s->derecha->color = 0;
                        s->color = 1;
                        izquierdaRotacion(s);
                        s = x->padre->izquierda;
                    }

                    s->color = x->padre->color;
                    x->padre->color = 0;
                    s->izquierda->color = 0;
                    derechaRotacion(x->padre);
                    x = root;
                }
            }
        }
        x->color = 0;
    }

    void transplanteRB(NodePtr u, NodePtr v) {
        if (u->padre == nullptr) {
            root = v;
        }
        else if (u == u->padre->izquierda) {
            u->padre->izquierda = v;
        }
        else {
            u->padre->derecha = v;
        }
        v->padre = u->padre;
    }

    void borrarNodoAyudanteNodePtr node, int key) {
        NodePtr z = TNULL;
        NodePtr x, y;
        while (node != TNULL) {
            if (node->data == key) {
                z = node;
            }

            if (node->data <= key) {
                node = node->derecha;
            }
            else {
                node = node->izquierda;
            }
        }

        if (z == TNULL) {
            cout << "Llave no encontrada en el arbol" << endl;
            return;
        }

        y = z;
        int y_original_color = y->color;
        if (z->izquierda == TNULL) {
            x = z->derecha;
            transplanteRB(z, z->derecha);
        }
        else if (z->derecha == TNULL) {
            x = z->izquierda;
            transplanteRB(z, z->izquierda);
        }
        else {
            y = minimo(z->derecha);
            y_original_color = y->color;
            x = y->derecha;
            if (y->padre == z) {
                x->padre = y;
            }
            else {
                transplanteRB(y, y->derecha);
                y->derecha = z->derecha;
                y->derecha->padre = y;
            }

            transplanteRB(z, y);
            y->izquierda = z->izquierda;
            y->izquierda->padre = y;
            y->color = z->color;
        }
        delete z;
        z = nullptr;
        if (y_original_color == 0) {
            borrarFix(x);
        }
    }

    void arreglarInsert(NodePtr k) {
        NodePtr u;
        while (k->padre->color == 1) {
            if (k->padre == k->padre->padre->derecha) {
                u = k->padre->padre->izquierda;
                if (u->color == 1) {
                    u->color = 0;
                    k->padre->color = 0;
                    k->padre->padre->color = 1;
                    k = k->padre->padre;
                }
                else {
                    if (k == k->padre->izquierda) {
                        k = k->padre;
                        derechaRotacion(k);
                    }
                    k->padre->color = 0;
                    k->padre->padre->color = 1;
                    izquierdaRotacion(k->padre->padre);
                }
            }
            else {
                u = k->padre->padre->derecha;

                if (u->color == 1) {
                    u->color = 0;
                    k->padre->color = 0;
                    k->padre->padre->color = 1;
                    k = k->padre->padre;
                }
                else {
                    if (k == k->padre->derecha) {
                        k = k->padre;
                        izquierdaRotacion(k);
                    }
                    k->padre->color = 0;
                    k->padre->padre->color = 1;
                    derechaRotacion(k->padre->padre);
                }
            }
            if (k == root) {
                break;
            }
        }
        root->color = 0;
    }

    void ayudanteImprimir(NodePtr root, string indent, bool last) {
        if (root != TNULL) {
            cout << indent;
            if (last) {
                cout << "R----";
                indent += "   ";
            }
            else {
                cout << "L----";
                indent += "|  ";
            }

            string sColor = root->color ? "RED" : "BLACK";
            cout << root->data << "(" << sColor << ")" << endl;
            ayudanteImprimir(root->izquierda, indent, false);
            ayudanteImprimir(root->derecha, indent, true);
        }
    }
public:
    ArbolRedBlack() {
        TNULL = new Node;
        TNULL->color = 0;
        TNULL->izquierda = nullptr;
        TNULL->derecha = nullptr;
        root = TNULL;
    }

    void preorder() {
        preOrderHelper(this->root);
    }

    void inorder() {
        inOrderHelper(this->root);
    }

    void postorder() {
        postOrderHelper(this->root);
    }

    NodePtr buscarArbol(int k) {
        return ayudanteBuscadorArbol(this->root, k);
    }

    NodePtr minimo(NodePtr node) {
        while (node->izquierda != TNULL) {
            node = node->izquierda;
        }
        return node;
    }

    NodePtr maximo(NodePtr node) {
        while (node->derecha != TNULL) {
            node = node->derecha;
        }
        return node;
    }

    NodePtr successor(NodePtr x) {
        if (x->derecha != TNULL) {
            return minimo(x->derecha);
        }

        NodePtr y = x->padre;
        while (y != TNULL && x == y->derecha) {
            x = y;
            y = y->padre;
        }
        return y;
    }

    NodePtr predecessor(NodePtr x) {
        if (x->izquierda != TNULL) {
            return maximo(x->izquierda);
        }

        NodePtr y = x->padre;
        while (y != TNULL && x == y->izquierda) {
            x = y;
            y = y->padre;
        }

        return y;
    }

    void izquierdaRotacion(NodePtr x) {
        NodePtr y = x->derecha;
        x->derecha = y->izquierda;
        if (y->izquierda != TNULL) {
            y->izquierda->padre = x;
        }
        y->padre = x->padre;
        if (x->padre == nullptr) {
            this->root = y;
        }
        else if (x == x->padre->izquierda) {
            x->padre->izquierda = y;
        }
        else {
            x->padre->derecha = y;
        }
        y->izquierda = x;
        x->padre = y;
    }

    void derechaRotacion(NodePtr x) {
        NodePtr y = x->izquierda;
        x->izquierda = y->derecha;
        if (y->derecha != TNULL) {
            y->derecha->padre = x;
        }
        y->padre = x->padre;
        if (x->padre == nullptr) {
            this->root = y;
        }
        else if (x == x->padre->derecha) {
            x->padre->derecha = y;
        }
        else {
            x->padre->izquierda = y;
        }
        y->derecha = x;
        x->padre = y;
    }

    void insert(int key) {
        NodePtr node = new Node;
        node->padre = nullptr;
        node->data = key;
        node->izquierda = TNULL;
        node->derecha = TNULL;
        node->color = 1;

        NodePtr y = nullptr;
        NodePtr x = this->root;

        while (x != TNULL) {
            y = x;
            if (node->data < x->data) {
                x = x->izquierda;
            }
            else {
                x = x->derecha;
            }
        }

        node->padre = y;
        if (y == nullptr) {
            root = node;
        }
        else if (node->data < y->data) {
            y->izquierda = node;
        }
        else {
            y->derecha = node;
        }

        if (node->padre == nullptr) {
            node->color = 0;
            return;
        }

        if (node->padre->padre == nullptr) {
            return;
        }

        arreglarInsert(node);
    }

    NodePtr getRoot() {
        return this->root;
    }

    NodePtr obtenerNULL() {
        return this->TNULL;
    }

    void borrarNodo(int data) {
        borrarNodoAyudantethis->root, data);
    }

    void imprimirArbol() {
        if (root) {
            ayudanteImprimir(this->root, "", true);
        }
    }
};
void contador(int& cont2, Node* x, ArbolRedBlack& rbt) {
    if (x != rbt.obtenerNULL()) {
        cont2 = cont2 + 1;
        contador(cont2, x->izquierda, rbt);
        contador(cont2, x->derecha, rbt);
    }
}

void imprime(int x, int y, int opcion, Node* cab, ArbolRedBlack& rbt) {
    if (cab == rbt.obtenerNULL()) return;
    int contt = 0;
    int x2 = x;
    if (opcion == 0) {
        contador(contt, cab->derecha, rbt);
        x = x - (contt * 60) - 60;
    }
    else if (opcion == 1) {
        contador(contt, cab->izquierda, rbt);
        x = x + (contt * 60) + 60;
    }
    char buffer[10];
    strcpy(buffer, to_string(cab->data).c_str());
    circle(x, y, 30);
    if (cab->color) {
        setfillstyle(SOLID_FILL, RED);
        floodfill(x, y, WHITE);
        setbkcolor(RED);
    }
    else {
        setbkcolor(BLACK);
    }
    settextstyle(ARW_STARTDERECHA, 0, 3);
    outtextxy(x - 15, y - 15, buffer);

    line(x2, y - 90, x, y - 30);

    imprime(x, y + 120, 0, cab->izquierda, rbt);
    imprime(x, y + 120, 1, cab->derecha, rbt);
}

int main() {
    Node* cabeza = NULL;
    int cont = 0;
    int i = 0;

    int choice;
