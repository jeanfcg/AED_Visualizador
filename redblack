        //mostrar grafico
        int x = 0;


        contador(x, bst.getRoot(), bst);
        imprime((x * 60) + 100, 100, 3, bst.getRoot(), bst);
        //mostrar en consola:

        bst.imprimirArbol();

        break;
        }
        case 4: {

            break;

        }
        default:cout << "\nInvalido\n";
        }
        //bt.toDot("Queue.dot");
        //system("dot Queue.dot -Tsvg -o Queue.svg");

    } while (choice != 4);


    /*
